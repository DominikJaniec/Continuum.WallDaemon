{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-server",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "--project",
                "src/earth-now"
            ],
            "group": "build",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-server",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "--project",
                "src/earth-now",
                "run"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "build-daemon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "--project",
                "src/wall-daemon"
            ],
            "group": "build",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-deamon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "--project",
                "src/wall-daemon",
                "run"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "daemon-call-args",
            "type": "promptString",
            "default": "--help",
            "description": "With given CLI arguments."
        }
    ],
    "tasks": [
        {
            "label": "build-daemon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "src/wall-daemon"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-deamon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "--project",
                "src/wall-daemon",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "watch-deamon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "--project",
                "src/wall-daemon",
                "run"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "call-deamon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "src/wall-daemon",
                "--",
                "${input:daemon-call-args}"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "example-deamon",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "src/wall-daemon",
                "--",
                "wall --by catalog --fit centre"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
    ]
}
